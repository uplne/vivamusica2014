<div class="top">
    {{>sidebar}}

    <div class="banner">
        <img src="/static/images/program/test.jpg" width="100%" />
    </div>
</div>
<div class="main__container">
    {{>sidebarpartners}}

    <article class="article">
        <header class="article__header">
            <section class="article__intro">
                <span class="article__date">{{datenum}}.</span>
                <span class="article__month">{{datemonth}}</span>
                <span class="article__place">{{place}}</span>
            </section>
            <section class="article__intro">
                <p class="article__introtext box">{{intro}}</p>
            </section>
        </header>
        <p class="article__text">
            {{{text}}}
        </p>
        {{#if tickets}}<a class="btn--buy--contrast" href="{{tickets}}">Kúpiť vstupenku</a>{{/if}}
    </article>
</div>
